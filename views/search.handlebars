<div class="columns">
    <div class="column is-one-quarter">
        <div class="box has-text-centered">
            <h5 class="title is-5">Selected Tags</h5>
            <div class="block" id="usedTags">
                {{#each tags}}
                <span class="tag is-danger m-1 is-large">
                    {{this}}
                    <button class="delete"></button>
                </span>
                {{/each}}
            </div>
            <div class="block">
                <button class="button is-medium is-success" id="startSearch">Search for books!</button>
            </div>
            <form action="" class="field" id="tagFinder">
                <div class="control is-expanded">
                    <input class="input" type="text" placeholder="find tags" id="searchTag">
                </div>
            </form>
            <h5 class="title is-5">Popular tags</h5>
            <div class="block" id="popularTags">
                <button class="button is-medium is-light">Science Fiction</button>
                <button class="button is-medium is-light">Fantasy</button>
                <button class="button is-medium is-light">History</button>
                <button class="button is-medium is-light">Nonfiction</button>
                <button class="button is-medium is-light">Biography</button>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="box">
            <p>searching for:</p>
            <div class="">
                {{#each tags}}
                <span class="tag is-danger is-medium">
                    {{this}}
                </span>
                {{/each}}
            </div>
        </div>
        <nav class="pagination is-centered" role="navigation" aria-label="pagination">
            <a class="pagination-previous has-background-light">Previous</a>
            <a class="pagination-next has-background-light">Next page</a>
            <ul class="pagination-list">
                <li>
                    <a class="pagination-link has-background-light" aria-label="Goto page 1">1</a>
                </li>
                <li>
                    <a class="pagination-link has-background-light" aria-label="Goto page 45">45</a>
                </li>
                <li>
                    <a class="pagination-link is-current" aria-label="Page 46" aria-current="page">46</a>
                </li>
                <li>
                    <a class="pagination-link has-background-light" aria-label="Goto page 47">47</a>
                </li>
                <li>
                    <a class="pagination-link has-background-light" aria-label="Goto page 86">86</a>
                </li>
            </ul>
        </nav>
        <div id="searchResultDisplay">
        </div>
    </div>
</div>


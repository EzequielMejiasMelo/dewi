<form class="box" id="signup-form">
  <p class="title is-3 is-spaced">Create your account!</p>
    <p class="subtitle is-5  has-text-weight-bold">Add the information below to create your own Bookshelf!</p>

  <div class="field">
    <label class="label">Username</label>
    <div class="control">
      <input class="input" type="username" id="signup-name">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input class="input" type="password" placeholder="********" id="signup-pass">
    </div>
  </div>
  <button type="submit" class="button is-dark" id="bookTag">Log In</button>

</form>

<script src="js/signup.js"></script>
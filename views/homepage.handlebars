<section class="has-text-centered">
    <h1 class="title is-1 has-text-light">Welcome to Dewey!</h1>
    <h4 class="subtitle is-4 has-text-light">A Book recommendation and logging website!</h4>
    <h4 class="subtitle is-4 has-text-light">Find your next great read today!</h4>
    <div class="box">
        <h5 class="title is-5">Selected Tags</h5>
        <div class="block" id="usedTags">
            <span class="tag is-danger m-1 is-large">
                Fiction
                <button class="delete"></button>
            </span>
        </div>
        <div class="block">
            <button class="button is-medium is-success" id="startSearch">Search for books!</button>
            </div>
        <form action="" class="field" id="tagFinder">
            <div class="control is-expanded">
                <input class="input" type="text" placeholder="find tags" id="searchTag">
            </div>
        </form>
        <h5 class="title is-5">Popular tags</h5>
        <div class="block" id="popularTags">
            <button class="button is-medium is-light">Science Fiction</button>
            <button class="button is-medium is-light">Fantasy</button>
            <button class="button is-medium is-light">History</button>
            <button class="button is-medium is-light">Nonfiction</button>
            <button class="button is-medium is-light">Biography</button>
        </div>
    </div>

</section>
